<div class="container">

	<h2>My Blog</h2>

	<form class="search" role="search">
      <%= form_tag(@post, :method => 'get') do %>
        <table>
			<tr class="row">
				<td class="col-sm-10"><%= text_field_tag('search', params[:search], :class => "form-control") %></td>
	          <td class="col-sm-2"><%= submit_tag("Search", :class => 'btn btn-default') %></td>
	        </tr>
        </table>
      <%end%>
    </form>

	<% if user_signed_in?%>
		<p>You are login like <strong><%= current_user.email %></strong></p>
	<%end%>
	<hr>
	<div class="post">
		<% @posts.each do |post| %>
			<h2 class="title"><%= link_to post.title, post %></h2>
			<h5><%= post.created_at.strftime("%B %d. %Y")%></h5>
			<h5><%= post.user.email %></h5>
			
			<div class="btn-group"> 
		      <%= link_to like_post_path(post), method: :put do %>
		        <%= image_tag("Thumbs_Up.png", :size => '40x40') %>
		        <%= post.get_upvotes.size %>
		      <% end %>
		      <%= link_to dislike_post_path(post), method: :put do %>
		        <%= image_tag("Thumbs_down.png", :size => '40x40') %>
		        <%= post.get_downvotes.size %>
		      <% end %>
		    </div>
		    <hr>
		<%end%>
	</div>
	


	
</div>

