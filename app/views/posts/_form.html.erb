
<% if @post.errors.any? %>
    <div id="error_explanation">
    	<h2>Houston, we have a problem!</h2>
      <h5><%= pluralize(@post.errors.count, "error") %></h5>
		<p>There were problems with the following fields:</p>
      <ul>
	      <% @post.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
<% end %>

	<div class="row">
		<div class="col-md-2"><%= f.label :title %></div>
		<div class="col-md-10"><%= f.text_field :title, :class => "form-control"%></div>
	</div >
	<div class="row">
		<div class="col-md-2"><%= f.label :body %></div>
		<div class="col-md-10"><%= f.text_area :body, :class => "form-control"%></div>
	</div>
		
	


