
<% if @post.errors.any? %>
    <div id="error_explanation">
    	<h2>Houston, we have a problem!</h2>
      <h5><%= pluralize(@post.errors.count, "error") %></h5>
		<p>There were problems with the following fields:</p>
      <ul>
	      <% @post.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

	<table>
		<tr class="row">
			<th class="col-sm-2"><%= f.label :title %></th>
			<td class="col-sm-10"><%= f.text_field :title, :class => "form-control"%></td>
		</tr >
		<tr class="row">
			<th class="col-sm-2"><%= f.label :body %></th>
			<td class="col-sm-10"><%= f.text_area :body, :class => "form-control"%></td>
		</tr>
		
	</table>
	


