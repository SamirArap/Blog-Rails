<h3>Add comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	
		<div class="row">
			<div class="col-md-2"><%= f.label :name %></div>
			<div class="col-md-10"><%= f.text_field :name, :class => "form-control"%></div>
		</div>
		<div class="row">
			<div class="col-md-2"><%= f.label :body %></div>
			<div class="col-md-10"><%= f.text_area :body, :class => "form-control" %></div>
		</div>
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-10"><%= f.submit 'Add Comment', :class => 'btn btn-block btn-info' %></div>
		</div>
	
<%end%>
<br>