<h3>Add comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<table>
		<tr class="row">
			<th class="col-sm-2"><%= f.label :name %></th>
			<td class="col-sm-10"><%= f.text_field :name, :class => "form-control"%></td>
		</tr>
		<tr class="row">
			<th class="col-sm-2"><%= f.label :body %></th>
			<td class="col-sm-10"><%= f.text_area :body, :class => "form-control" %></td>
		</tr>
		<tr class="row">
			<th class="col-sm-2"></th>
			<td class="col-sm-10"><%= f.submit 'Add Comment', :class => 'btn btn-larg btn-block btn-info' %></td>
		</tr>
	</table>
<%end%>
<br>